        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="25dp"
            android:background="#FACCA0"
            android:orientation="vertical"

            android:padding="25dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:text="Have you ever been catcalled or heard something uncomfortable in social settings? Your story matters because you are not alone. Share your experience and get support!"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"
                android:textSize="25dp"
                app:fontFamily="@font/yeseva_one" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:hint="Your Experience"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:typeface="sans" />

<!--            <EditText-->
